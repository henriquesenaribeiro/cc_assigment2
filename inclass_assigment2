let orders = [
    { id 101, cutomer: "Alice", total: 300},
    { id 102, customer: "Bob", total: 450},
    { id 103, customer: "Charles", total 200}

];

function findOrders(orders,orderId){
    return orders.find(order => oder.Id === orderId);
}

same_order =  findOrders(orders, 101)
